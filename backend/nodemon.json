{
    "watch": [
        "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "dist",
        "node_modules"
    ],
    "exec": "node -r ts-node/register --inspect=9229 src/server.ts",
    "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "./tsconfig.json"
    },
    "delay": 1000,
    "verbose": true
}