{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "type": "npm",
      "script": "build",
      "path": "backend/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "build-frontend",
      "type": "npm",
      "script": "build",
      "path": "frontend/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "install-backend-deps",
      "type": "npm",
      "script": "install",
      "path": "backend/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "install-frontend-deps",
      "type": "npm",
      "script": "install",
      "path": "frontend/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test-backend",
      "type": "npm",
      "script": "test",
      "path": "backend/",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test-frontend",
      "type": "npm",
      "script": "test",
      "path": "frontend/",
      "options": {
        "env": {
          "CI": "true"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "dev-backend",
      "type": "npm",
      "script": "dev",
      "path": "backend/",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "group": "development"
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}/backend"],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{2}:\\d{2}(?: AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{2}:\\d{2}(?: AM| PM)? - (?:Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
        }
      }
    },
    {
      "label": "dev-frontend",
      "type": "npm",
      "script": "start",
      "path": "frontend/",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "group": "development"
      },
      "problemMatcher": {
        "owner": "webpack",
        "source": "webpack",
        "severity": "warning",
        "fileLocation": ["relative", "${workspaceFolder}/frontend/src"],
        "pattern": [
          {
            "regexp": "^\\s*(.*)\\s*$",
            "file": 1
          },
          {
            "regexp": "^\\s*Line (\\d+):(\\d+):\\s+(warning|error)\\s+(.*)\\s*$",
            "line": 1,
            "column": 2,
            "severity": 3,
            "message": 4,
            "loop": true
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*webpack.*compiled.*$",
          "endsPattern": "^.*webpack.*compiled.*$"
        }
      }
    },
    {
      "label": "setup-project",
      "dependsOrder": "sequence",
      "dependsOn": [
        "install-backend-deps",
        "install-frontend-deps",
        "build-backend"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "start-full-stack",
      "dependsOrder": "parallel",
      "dependsOn": [
        "dev-backend",
        "dev-frontend"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}